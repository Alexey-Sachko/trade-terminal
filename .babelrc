{
  "presets": [
    [
      "@babel/preset-env",
      {
        "modules": false,
        "corejs": { "version": 3, "proposals": true },
        "useBuiltIns": "usage",
        "shippedProposals": true,
        "targets": {
          "browsers": ["last 2 chrome versions"]
        }
      }
    ],
    "@babel/preset-react",
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "@babel/plugin-proposal-decorators",
      {
        "legacy": true
      }
    ],
    [
      "@babel/plugin-proposal-class-properties",
      {
        "loose": false
      }
    ]
  ]
}
